{
  "name": "stock-investment",
  "displayName": "股票看盘工具",
  "description": "快速掌握自选股动态，工作投资两不误！",
  "keywords": [
    "股票",
    "A股",
    "股市",
    "自选股",
    "大盘"
  ],
  "version": "1.0.0",
  "publisher": "coderwsh",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderwang/stock-investment"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "股票看盘",
      "properties": {
        "stockInvestment.stockCodes": {
          "type": "string",
          "default": "",
          "description": "自定义股票代码，使用逗号分隔。格式：市场.代码，例如：0.399001,0.399006,1.600519,1.000858（0=深圳，1=上海）"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "stockView",
          "name": "Stock"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.showStockPanel",
        "title": "Show Stock Panel"
      },
      {
        "command": "stockView.openWebsite",
        "icon": "$(link-external)",
        "title": "打开东方财富",
        "enablement": "view == stockView"
      },
      {
        "command": "stockView.refresh",
        "icon": "$(refresh)",
        "title": "刷新股票面板",
        "enablement": "view == stockView"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "stockView.refresh",
          "when": "view == stockView",
          "group": "navigation"
        },
        {
          "command": "stockView.openWebsite",
          "when": "view == stockView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
