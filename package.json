{
  "name": "stock-investment",
  "displayName": "股票看盘工具",
  "description": "支持A股、港股、美股，快速掌握自选股动态，工作投资两不误！",
  "keywords": [
    "股票",
    "A股",
    "港股",
    "美股",
    "股市",
    "自选股",
    "大盘"
  ],
  "version": "1.2.0",
  "publisher": "coderwsh",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderwang/stock-investment"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "股票看盘",
      "properties": {
        "stockInvestment.stockCodeList": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "自定义股票代码列表。支持两种格式：\n1. 市场.代码（仅查看行情）\n2. 市场.代码:持有股数（查看行情+持仓盈亏）\n例如: 1.600519:100, 0.300316, 116.00700:500, 105.AAPL:10\n(0=深圳, 1=上海, 116=港股, 105、106、107=美股)"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "stockView",
          "name": "Stock"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.showStockPanel",
        "title": "Show Stock Panel"
      },
      {
        "command": "stockView.openWebsite",
        "icon": "$(link-external)",
        "title": "打开东方财富",
        "enablement": "view == stockView"
      },
      {
        "command": "stockView.refresh",
        "icon": "$(refresh)",
        "title": "刷新股票面板",
        "enablement": "view == stockView"
      },
      {
        "command": "stockView.editHoldingShares",
        "title": "编辑持有股数",
        "enablement": "view == stockView && viewItem == stockRoot"
      },
      {
        "command": "stockView.deleteStock",
        "title": "删除股票",
        "enablement": "view == stockView && viewItem == stockRoot"
      },
      {
        "command": "stockView.addStock",
        "icon": "$(add)",
        "title": "添加自选股",
        "enablement": "view == stockView"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "stockView.openWebsite",
          "when": "view == stockView",
          "group": "navigation@1"
        },
        {
          "command": "stockView.refresh",
          "when": "view == stockView",
          "group": "navigation@2"
        },
        {
          "command": "stockView.addStock",
          "when": "view == stockView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "stockView.editHoldingShares",
          "when": "view == stockView && viewItem == stockRoot",
          "group": "stock@1"
        },
        {
          "command": "stockView.deleteStock",
          "when": "view == stockView && viewItem == stockRoot",
          "group": "stock@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
